            <Label x:Name="label1" Content="Total" HorizontalAlignment="Left" Margin="10,400,0,0" VerticalAlignment="Top" FontSize="24"/>
            <TextBlock x:Name="totalCostBlock" HorizontalAlignment="Left" Margin="76,405,0,0" TextWrapping="Wrap" Text="R 0.00" VerticalAlignment="Top" FontSize="24"/>
            <Button x:Name="button" Content="Pay" HorizontalAlignment="Left" Margin="182,0,0,10" 
                    VerticalAlignment="Bottom" Width="212" Height="79" Click="button_Click_1" FontSize="18"
                    Style="{StaticResource AccentedSquareButtonStyle}"/>
        </Grid>
    </Grid>

</Controls:MetroWindow>
